class Solution {
    public List<Integer> findWordsContaining(String[] words, char x) {
        List<Integer> ind = new ArrayList<>(); 
        for(int i=0; i<words.length; i++) {
            char[] s = words[i].toCharArray();
            for(char j : s){
                if( j == x) {
                    ind.add(i);
                    break;
                }
            }
        }
        return ind;
    }
}
