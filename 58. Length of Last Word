class Solution {
    public int lengthOfLastWord(String s) {
        s = s.trim();
        String lastword = "";
        for(int i=s.length()-1; i>=0; i--){
            if(s.charAt(i) == ' '){
                break; 
            }    
            lastword = s.charAt(i) + lastword;
        }
        return lastword.length();
    }
}
